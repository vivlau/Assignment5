<div class = "new-post-page">

  <% if @post.errors.any? %>
    <ul>
      <div class="alert alert-danger">
        <% @post.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </div>
    </ul>
  <% end %>

  <div class ="new-post-container">
    <h1>New Post</h1>
    <br>
    <%= form_for :post, url: posts_path do |f| %>
      <p>
        <%= f.label :title %><br>
        <%= f.text_field :title, :class => 'new_post_field' %>
      </p>

      <p>
        <%= f.label :body %><br>
        <%= f.text_area :body, :class => 'post_textarea_field' %>
      </p>

      <div class = "form-group">
        <%= f.label :image %>
        <%= f.file_field :image %>
      </div>

      <p>
      <%= f.label :full_name %>
      <%= current_author.name %>
      <%= f.hidden_field :author_id, :value => current_author.id %>
      </p>
      <%= f.hidden_field :likes, value: 0 %>
      <p>
        <%= submit_tag 'Save Post', class: 'btn btn-primary'  %>
      </p>
    <% end %>
  </div>
</div>
